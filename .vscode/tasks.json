{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "构建 frpcgui",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-v",
                "-o",
                "${workspaceFolder}/bin/frpcgui.exe",
                "${workspaceFolder}/cmd/frpcgui"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "构建便携版",
            "type": "shell",
            "command": "${workspaceFolder}/build_portable.bat",
            "group": "build",
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "运行所有测试",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "./..."
            ],
            "group": "test",
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "清理构建产物",
            "type": "shell",
            "command": "go",
            "args": [
                "clean",
                "-cache"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
}